---
import { userLinks } from "../data/userData.js";
---

<section class="botones">
  {
    userLinks.map((data) => (
      <a
        href={data.link}
        class="boton"
        data-astro-prefetch
        target="_blank"
        rel="nofollow noreferrer noopener"
      >
        {" "}
        <>
          <iconify-icon
            icon={data.icon}
            width="25"
            height="25"
            class="iconify"
          />
          <span>{data.title}</span>
        </>
      </a>
    ))
  }
</section>

<style>
  .botones {
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    width: 100%;
    padding: 0 1.4rem;
  }
  .boton {
    flex: 1;
    text-align: center;
    display: flex;
    gap: 3rem;
    align-items: center;
    min-height: 5dvh;
    padding: 1rem 2rem;
    background-color: var(--button-flat);
    color: var(--secundary-color);
    font-size: 1.8rem;
    text-decoration: none;
    border-radius: 12px;
    min-width: 30rem;
    width: 100%;

    &&:hover {
      background-color: var(--button-hover);
    }
    &&:active {
      background-color: var(--button-active);
    }

  }

  :global(.dark) .boton {
    background: transparent;
    border: solid 2px var(--border-color);
    color: rgb(18, 26, 26);
  }
  :global(.dark) .boton:hover {
    background: rgb(10, 17, 26);
    background: radial-gradient(
      circle,
      rgb(22, 18, 37) 0%,
      rgb(5, 3, 7) 100%
    );
    color: rgb(253, 252, 252);
  }
</style>
